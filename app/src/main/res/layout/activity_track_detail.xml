<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/detailed_album_cover"
            android:padding="8dp"
            android:layout_width="170dp"
            android:layout_height="170dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:paddingBottom="7dp"
                android:id="@+id/detail_track_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEST"
                android:gravity="center"
                android:textSize="20dp"
                />

            <TextView
                android:paddingBottom="7dp"
                android:id="@+id/detailed_artists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEST"
                android:gravity="center"
                android:textSize="15dp"/>
            <TextView
                android:paddingBottom="7dp"
                android:id="@+id/detailed_album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEST"
                android:textSize="15dp"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danceability"
        android:gravity="center"
        android:textSize="15dp"
        android:id="@+id/danceability_tv"/>

    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:id="@+id/danceability_progress"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:rcBackgroundPadding="10dp"
        app:rcIconSize="50dp"
        app:rcIconPadding="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Energy"
        android:textSize="15dp"
        android:gravity="center"
        android:id="@+id/energy_tv"/>

    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:id="@+id/energy_progress"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:rcBackgroundPadding="10dp"
        app:rcIconSize="50dp"
        app:rcIconPadding="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valence/Positivity"
        android:textSize="15dp"
        android:gravity="center"
        android:id="@+id/valence_tv"/>
    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:id="@+id/valence_progress"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:rcBackgroundPadding="10dp"
        app:rcIconSize="50dp"
        app:rcIconPadding="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liveness"
        android:textSize="15dp"
        android:gravity="center"
        android:id="@+id/liveness_tv"/>

    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:id="@+id/liveness_progress"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:rcBackgroundPadding="10dp"
        app:rcIconSize="50dp"
        app:rcIconPadding="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instrumentalness"
        android:textSize="15dp"
        android:gravity="center"
        android:id="@+id/instrumentalness_tv"/>
    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:id="@+id/instrumentalness_progress"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:rcBackgroundPadding="10dp"
        app:rcIconSize="50dp"
        app:rcIconPadding="5dp" />
</LinearLayout>
</ScrollView>
